		<noscript><link rel="stylesheet" href="assets/css/noscript.css" /></noscript>
	</head>
	<body class="is-preload">
		<!-- Page Wrapper -->
			<div id="page-wrapper">

				<!-- Header -->
					<header id="header">
						<h1><a href="/">FootWiz</a></h1>
						<nav id="nav">
							<ul>
								<li class="special">
									<a href="#menu" class="menuToggle"><span>Menu</span></a>
									<div id="menu">
										<ul>
											<li><a href="/">Home</a></li>
                      <li><a href="/leagues">Standings</a></li>
                      <li><a href="/livescore">Live Scores</a></li>
                      <li><a href="/login">Login</a></li>
                      <li><a href="/createAccount">Sign Up</a></li>
										</ul>
									</div>
								</li>
							</ul>
						</nav>
					</header>

				<!-- Main -->
					<article id="main">
						<header>
							<h2>Sign Up</h2>
							<p>Enter your information in the form below to sign up</p>
						</header>
						<section class="wrapper style5">
							<div class="inner">

            <section>
              <form method="post" action="/submit">
                  <div class="row gtr-uniform">
                    <div class="col-6 col-12-xsmall">
                        <input type="text" name="first_name" id="first_name" value="" placeholder="First Name" />
                    </div>
                    <div class="col-6 col-12-xsmall">
                        <input type="text" name="last_name" id="last_name" value="" placeholder="Last Name" />
                    </div>
                    <div class="col-6 col-12-xsmall">
                        <input type="email" name="email" id="email" value="" placeholder="Email" />
                    </div>
                    <div class="col-6 col-12-xsmall">
                        <input type="password" name="password" id="password" value="" placeholder="Password" />
                    </div>
                    <div class="col-6 col-12-small">
                        <input type="checkbox" id="termsConditions" name="termsConditions" unchecked>
                        <label for="termsConditions">Agree to terms and conditions</label>
                    </div>
                    <div class="col-12">
                        <ul class="actions">
                          <li><button class="button primary">Sign Up</button></li>
                        </ul>
                    </div>
                  </div>
              </form>
          </section>

							</div>
						</section>
					</article>

				<!-- Footer -->
					<footer id="footer">
						<ul class="icons">
							<li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
